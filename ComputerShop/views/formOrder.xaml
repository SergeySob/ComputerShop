<Window x:Class="ComputerShop.views.formOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerShop.views"
        mc:Ignorable="d"
        Title="formOrder" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Оформить заказ" FontSize="50" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DataGrid Grid.ColumnSpan="2" Grid.Row="1">
            
        </DataGrid>
        <Button x:Name="btFormOrder" Content="Оформить заказ" Grid.Column="1" Grid.Row="2" FontSize="35" Click="btFormOrder_Click"/>
        <TextBlock Text="Сумма заказа:" Grid.Row="2" FontSize="35" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Window>
